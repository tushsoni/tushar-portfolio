        Tushar Soni | Business Analyst
    </footer>

    <button id="back-to-top" title="Go to top">
        <i class="bi bi-arrow-up"></i>
    </button>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const themeSwitcher = document.querySelector('.theme-switcher');
            const body = document.body;
            const hamburger = document.querySelector('.hamburger');
            const navLinks = document.querySelector('.nav-links');
            
            function toggleTheme() {
                body.classList.toggle('dark-mode');
                const isDarkMode = body.classList.contains('dark-mode');
                localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');
            }

            themeSwitcher.addEventListener('click', toggleTheme);

            hamburger.addEventListener('click', () => {
                body.classList.toggle('nav-open');
            });
            
            navLinks.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', () => {
                    if (body.classList.contains('nav-open')) {
                        body.classList.remove('nav-open');
                    }
                });
            });

            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                body.classList.add('dark-mode');
            }

            // Advanced Features
            const progressBar = document.getElementById('myProgressBar');
            const backToTopBtn = document.getElementById('back-to-top');
            const sectionsToAnimate = document.querySelectorAll('.animate-on-scroll');

            function updateProgressBar() {
                const scroll = document.documentElement.scrollTop;
                const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                const scrolled = (scroll / height) * 100;
                progressBar.style.width = scrolled + '%';

                if (scroll > 300) { // Show button after scrolling 300px
                    backToTopBtn.classList.add('show');
                } else {
                    backToTopBtn.classList.remove('show');
                }
            }

            function checkAnimations() {
                sectionsToAnimate.forEach(section => {
                    const sectionTop = section.getBoundingClientRect().top;
                    const triggerPoint = window.innerHeight * 0.8; // 80% down the viewport

                    if (sectionTop < triggerPoint) {
                        section.classList.add('in-view');
                    }
                });
            }

            window.addEventListener('scroll', () => {
                updateProgressBar();
                checkAnimations();
            });

            backToTopBtn.addEventListener('click', () => {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            // Initial check for animations and progress bar on page load
            updateProgressBar();
            checkAnimations();
        });
    </script>
</body>

</html>
